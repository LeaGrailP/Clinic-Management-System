{
  "name": "clinic-pos",
  "version": "0.0.1",
  "description": "electron-nuxt project",
  "main": "electron/main.js",

  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild",

    "electron:dev": "concurrently \"yarn dev\" \"wait-on http://localhost:3000 && electron electron/main.js\"",

    "electron": "electron electron/main.js",

    "dist": "yarn build && electron-builder"
  },

  "build": {
    "appId": "com.clinic.pos",
    "productName": "ClinicPOS",

    "files": [
  "electron/**/*",
  ".output/public/**/*",
  "package.json"
],


    "directories": {
      "buildResources": "build"
    },

    "win": {
      "target": "nsis"
    }
  },

  "keywords": [],
  "author": "LG, SK",
  "license": "MIT",

  "engines": {
    "node": ">=14.14.9"
  },

  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "electron": "^37.3.0",
    "electron-builder": "^24.13.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "nuxt": "^3.12.0",
    "pinia": "^3.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.17",
    "wait-on": "^8.0.3"
  },

  "dependencies": {
    "@nuxthq/ui": "^2.7.0",
    "@pinia/nuxt": "^0.11.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^5.2.1",
    "lucide-vue-next": "^0.513.0",
    "node-thermal-printer": "4.5.0",
    "serve-static": "^2.2.0"
  }
}
