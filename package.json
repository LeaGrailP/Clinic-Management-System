{
  "name": "clinic-pos",
  "version": "0.0.1",
  "description": "Clinic POS â€” Offline Electron + Nuxt 3 system",
  "main": "electron/main.js",
  "author": "LeaGrail <161104051+LeaGrail@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nuxt dev --host",
    "build": "nuxt generate",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild",
    "electron": "electron electron/main.js",
    "electron:dev": "concurrently \"yarn dev\" \"wait-on http://localhost:3000 && electron electron/main.js\"",
    "dist": "yarn build && electron-builder"
  },
  "build": {
    "appId": "com.clinic.pos",
    "productName": "ClinicPOS",
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "files": [
    "electron/",
  ".output/**"
    ],
    "extraResources": [
      {
        "from": "electron/userData",
        "to": "userData",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@nuxthq/ui": "^2.7.0",
    "@pinia/nuxt": "^0.11.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "lucide-vue-next": "^0.513.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "electron": "^37.3.0",
    "electron-builder": "^24.13.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "nuxt": "^3.12.0",
    "pinia": "^3.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.17",
    "wait-on": "^8.0.3"
  },
  "engines": {
    "node": ">=14.14.9"
  }
}
